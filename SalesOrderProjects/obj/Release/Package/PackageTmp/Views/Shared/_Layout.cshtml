<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/sweetalert2.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>        
        .bg-navblue{
           background-color: #116BBD !important; 
        }         
    </style>
</head>
<body>
    <nav class="navbar navbar-light bg-navblue">
        <span class="navbar-brand mb-0 h1 text-white">SALES ORDER</span>
    </nav>

    <div class="d-none spinner_loading justify-content-center">
        <div class="spinner-border text-light" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

        @RenderBody()

    <script src="~/scripts/jquery-3.5.1.min.js"></script>
    <script src="~/scripts/bootstrap.bundle.min.js"></script>
    <script src="~/scripts/dataTables.js"></script>
    <script src="~/scripts/dataTables.bootstrap4.js"></script>
    <script src="~/scripts/autoNumeric.min.js"></script>
    <script src="~/scripts/sweetalert2.all.min.js"></script>
    <script src="~/scripts/jquery.table2excel.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>